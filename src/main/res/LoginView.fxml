<BorderPane prefHeight="600.0" prefWidth="800.0" style="-fx-background-color: white;" xmlns="http://javafx.com/javafx/8.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="view.LoginController">
   <top>
      <ImageView fitHeight="225.0" fitWidth="415.0" pickOnBounds="true" preserveRatio="true" BorderPane.alignment="CENTER">
         <image>
            <Image url="@/images/logo.PNG" />
         </image>
      </ImageView>
   </top>
   <center>
      <Pane prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER">
         <children>
            <Label layoutX="202.0" layoutY="57.0" prefHeight="68.0" prefWidth="138.0" text="User Name">
               <font>
                  <Font size="23.0" />
               </font>
            </Label>
            <Label layoutX="202.0" layoutY="136.0" text="Passwoard">
               <font>
                  <Font size="23.0" />
               </font>
            </Label>
            <Button defaultButton="true" layoutX="423.0" layoutY="186.0" mnemonicParsing="false" onAction="#signInAction" prefHeight="36.0" prefWidth="145.0" style="-fx-background-color: #926757;" text="Sign in" textAlignment="CENTER" textFill="#f2f2f2">
               <font>
                  <Font size="18.0" />
               </font>
            </Button>
            <Hyperlink layoutX="436.0" layoutY="236.0" onAction="#goToRegister" text="Don't have an account?" />
            <TextField fx:id="userName" layoutX="367.0" layoutY="79.0" prefHeight="25.0" prefWidth="201.0" promptText="user name" />
            <PasswordField fx:id="password" layoutX="367.0" layoutY="141.0" prefHeight="25.0" prefWidth="201.0" promptText="password" />
         </children>
      </Pane>
   </center>
</BorderPane>
